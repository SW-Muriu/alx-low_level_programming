#include "main.h"
/**
 * main - Entry point
 *
 * Description: program prints alphabets
 * uses only 2 _putchar fxns
 * print_alphabet: fxn prints lowercased alphabets
 *
 * Return: 0 if successful (Always)
 */
void print_alphabet(void)
{
	char alphabet = 'a';

	while (alphabet <= 'z')
	{
		_putchar(alphabet);
		alphabet++;
	}
	_putchar('\n');
}
